<% layout('layouts/boilerplate') %>

<style>
  body {
    background: url('https://images.unsplash.com/photo-1622396481328-9b1b78cdd9fd?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80') no-repeat center center fixed;
    background-size: cover;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #f4f6fa;
    margin: 0;
    padding: 0;
  }

  .hero-section {
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 40px 20px;
  }

  .hero-card {
    background: rgba(255, 255, 255, 0.06);
    padding: 50px 40px;
    border-radius: 16px;
    max-width: 700px;
    width: 100%;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
    backdrop-filter: blur(10px);
  }

  .hero-card h1 {
    font-size: 3rem;
    margin-bottom: 20px;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.4);
  }

  .hero-card p {
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: 40px;
    color: #e3e9f5;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.25);
  }

  .cta-button {
    padding: 14px 36px;
    font-size: 1.15rem;
    background: linear-gradient(135deg, #56CCF2, #2D9CDB);
    color: white;
    border: none;
    border-radius: 30px;
    font-weight: bold;
    cursor: pointer;
    box-shadow: 0 6px 18px rgba(45, 156, 219, 0.6);
    transition: all 0.3s ease-in-out;
  }

  .cta-button:hover {
    background: linear-gradient(135deg, #2D9CDB, #56CCF2);
    transform: scale(1.05);
    box-shadow: 0 10px 25px rgba(86, 204, 242, 0.85);
  }
</style>

<div class="hero-section">
  <div class="hero-card">
    <h1>Discover Your Perfect Getaway</h1>
    <p>Explore unique stays, cozy cabins, beach houses, and more â€” all in one place.</p>
    <form action="/listings">
      <button type="submit" class="cta-button">Find Your Escape</button>
    </form>
  </div>
</div>
