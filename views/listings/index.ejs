 <% layout('layouts/boilerplate') -%>
<style>
  body {
    background-color:#244a512b;
    /* background-size: cover; */
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    /* color: #f4f6fa; */
    /* margin: 0;
    padding: 0; */
  }

 #filters {
    display: flex;
    flex-wrap: wrap;
    justify-content: left;
    gap: 2rem;
    padding: 2rem 1rem;
  }
  .filter {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #444;
    transition: all 0.3s ease;
    opacity: 0.7;
  }

  .filter:hover {
    opacity : 1;
    cursor : pointer;
  }


  </style>
    <!-- <h3>Explore Places</h3> -->
 <div id="filters">
      <div class="filter"><i class="fa-solid fa-fire"></i><p>Trending</p></div>
      <div class="filter"><i class="fa-solid fa-peace"></i><p>Peace</p></div>
      <div class="filter"><i class="fa-solid fa-mountain"></i><p>Adventure</p></div>
      <div class="filter"><i class="fa-solid fa-city"></i><p>City Life</p></div>
      <div class="filter"><i class="fa-solid fa-umbrella-beach"></i><p>Beaches</p></div>
      <div class="filter"><i class="fa-solid fa-campground"></i><p>Camping</p></div>
      <div class="filter"><i class="fa-solid fa-tree"></i><p>Nature</p></div>
      <div class="filter"><i class="fa-solid fa-snowflake"></i><p>Winter</p></div>
      <div class="filter"><i class="fa-solid fa-chess-rook"></i><p>Castles</p></div>
      <div class="filter"><i class="fa-solid fa-water"></i><p>Lakeside</p></div>
 </div>
   <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
<% for(let listing of allListings) { %>
  <a href="listings/<%=listing._id%>" class="listing-link">
      <div class="card col listing-card" >
  <img src="<%= listing.image.url %>"
  class="card-img-top" 
  alt="listing_img" 
  style="height:20rem"
  />
  
  <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text">
      <b><%= listing.title %></b>  <br/>
      &#8377;<%= listing.price%> /night
    </p>
  </div>
</div>

  </a>
  
  <% } %>
    </div>
 

